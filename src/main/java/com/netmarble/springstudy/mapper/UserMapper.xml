<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netmarble.springstudy.mapper.UserMapper">
    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyColumn="USER_SEQ" keyProperty="USER_SEQ">
        INSERT INTO USER (USER_ID,USER_PASS,USER_NAME) VALUES (#{USER_ID},#{USER_PASS},#{USER_NAME})
    </insert>
    <select id="getUser" resultType="User" parameterType="int">
    	SELECT * FROM USER WHERE USER_SEQ=#{value}
    </select>
    <select id="getUserById" resultType="User" parameterType="java.lang.String">
        SELECT * FROM USER WHERE USER_ID=#{value}
    </select>
    <delete id="deleteUser" parameterType="User">
    	DELETE FROM USER WHERE USER_SEQ=#{USER_SEQ} LIMIT 1
    </delete>
</mapper>